#include <iostream>
#include <cmath>
using namespace std;

int main() {
    int k, N, i;
    double S;

    cout << "k = "; cin >> k;
    cout << "N = "; cin >> N;

    // 1. Цикл while
    S = 0;
    i = k;
    while (i <= N) {
        S += sin(1.0 * i);
        i++;
    }
    cout << "Результат (while): " << S << endl;

    // 2. Цикл do-while
    S = 0;
    i = k;
    do {
        S += sin(1.0 * i);
        i++;
    } while (i <= N);
    cout << "Результат (do-while): " << S << endl;

    // 3. Цикл for з наростанням
    S = 0;
    for (i = k; i <= N; i++) {
        S += sin(1.0 * i);
    }
    cout << "Результат (for ++): " << S << endl;

    // 4. Цикл for зі спаданням
    S = 0;
    for (i = N; i >= k; i--) {
        S += sin(1.0 * i);
    }
    cout << "Результат (for --): " << S << endl;

    return 0;
}
